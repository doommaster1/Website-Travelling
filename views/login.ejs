    </head>
    <body>
        <div class="ring">
            <!-- <i style="--clr:#00FFFF;"></i> <i style="--clr:#FF00FF;"></i> -->
            <!-- <i style="--clr:#fffd44;"></i> -->
            <i style="--clr:#fff;"></i>
            <i style="--clr:#fff;"></i>
            <i style="--clr:#fff;"></i>
            <div class="sampul">
                <div class="login-box" id="id">
                    <h2>Sign In</h2>
                    <form action="#" method="post">
                        <div class="form">
                            <span class="icon">
                                <i data-feather="mail"></i>
                            </span>
                            <input type="text" name="userlogin" required="required">
                            <label>Username</label>
                        </div>
                        <div class="form">
                            <span class="icon">
                                <i data-feather="lock"></i>
                            </span>
                            <input type="password" name="passwordlogin" required="required">
                            <label>Password</label>
                        </div>
                        <div class="rememberforgot">
                            <label><input type="checkbox" name="remember">Remember Me</label>
                            <a href="#">Forgot Password?</a>
                        </div>
                        <button type="submit" class="btn">LOGIN</button>
                        <div class="otherregis">
                            <a>Or Sign Up Using</a>
                        </div>
                        <div class="socialmedia">
                            <a href="https://twitter.com/i/flow/logins">
                                <i data-feather="twitter"></i>
                            </a>
                            <a href="https://www.instagram.com/accounts/login/?hl=en">
                                <i data-feather="instagram"></i>
                            </a>
                            <a href="https://www.facebook.com/">
                                <i data-feather="facebook"></i>
                            </a>
                        </div>
                        <div class="log-register">
                            <p>Don't have an account?
                                <a href="#" class="regis-link">Register</a>
                            </p>
                        </div>
                    </form>
                </div>
                <div class="register-box">
                    <h2>Sign Up</h2>
                    <form action="#" method="post">
                        <div class="form">
                            <span class="icon">
                                <i data-feather="user"></i>
                            </span>
                            <input type="text" name="userregis" required="required">
                            <label>Username</label>
                        </div>
                        <div class="form">
                            <span class="icon">
                                <i data-feather="mail"></i>
                            </span>
                            <input type="text" name="emailregis" required="required">
                            <label>Email</label>
                        </div>
                        <div class="form">
                            <span class="icon">
                                <i data-feather="lock"></i>
                            </span>
                            <input type="password" name="passwordregis" required="required">
                            <label>Password</label>
                        </div>
                        <div class="rememberforgot">
                            <label><input type="checkbox" required="required">I agree to the terms & conditions</label>
                        </div>
                        <button type="submit" class="btn">Register</button>
                        <div class="otherregis">
                            <a>Or Sign Up Using</a>
                        </div>
                        <div class="socialmedia">
                            <a href="https://twitter.com/i/flow/logins">
                                <i data-feather="twitter"></i>
                            </a>
                            <a href="https://www.instagram.com/accounts/login/?hl=en">
                                <i data-feather="instagram"></i>
                            </a>
                            <a href="https://www.facebook.com/">
                                <i data-feather="facebook"></i>
                            </a>
                        </div>
                        <div class="log-register">
                            <p>Already have an account?
                                <a href="#" class="login-link">Login</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
            <script src="login.js"></script>
            <script>
                feather.replace();
            </script>
